<UserControl x:Class="HgSccHelper.Kiln.OptionsPageKiln"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Kiln="clr-namespace:HgSccHelper.Kiln"
             Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel>
            <Kiln:CredentialsControl x:Name="credentials"></Kiln:CredentialsControl>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button Content="Login"
                            Click="Login_Click"
                            MinWidth="75"                            
                            MinHeight="25"
                            Margin="5,5,0,5">
                    </Button>
                    <Button Content="Clear"
                            Click="Clear_Click"
                            MinWidth="75"
                            MinHeight="25"
                            Margin="5">
                    </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
