	<Fragment>
		<CustomAction Id="VS2008_SETUP"
					  Property="VS2008_DEVENV"
					  ExeCommand="/setup /nosetupvstemplates"
					  Execute="deferred"
					  Return="asyncWait"
					  Impersonate="no" />

		<PropertyRef Id="VS2008_DEVENV" />

		<InstallExecuteSequence>
			<Custom Action="VS2008_SETUP"
					Before="InstallFinalize"
					Overridable="yes">
				<![CDATA[&Feature_VS2008=3]]>
			</Custom>
		</InstallExecuteSequence>
