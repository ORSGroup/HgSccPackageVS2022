		</Property>
	</Fragment>
	<Fragment>
		<DirectoryRef Id="INSTALLLOCATION">
			<Component Id="VS2008_REG">
				<!-- SOFTWARE\Microsoft\VisualStudio\9.0 -->
				<RegistryKey Id="Reg_VS2008_SolutionPersistence"
							 Root="HKLM"
							 Action="createAndRemoveOnUninstall"
							 Key="SOFTWARE\Microsoft\VisualStudio\9.0\SolutionPersistence\MercurialSourceControlSolutionProperties">
					<RegistryValue Type="string" Value="{a7f26ca1-2000-4729-896e-0bbe9e380635}" />
				</RegistryKey>
				<RegistryKey Id="Reg_VS2008_SourceControlProviders"
							 Root="HKLM"
