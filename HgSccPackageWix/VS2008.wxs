					<RegistryValue Name="PID" Type="string" Value="$(var.ZZ_VERSION)"></RegistryValue>
					<RegistryValue Name="LogoID" Type="string" Value="#400"></RegistryValue>
				</RegistryKey>
				<RegistryKey Id="Reg_VS2008_Packages"
