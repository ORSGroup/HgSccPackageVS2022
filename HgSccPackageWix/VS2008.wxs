<?xml version="1.0" encoding="UTF-8"?>
<?include Constants.wxi?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
		<Property Id="VS2008_DEVENV">
			<RegistrySearch Id="VS2008_DEVENV_SEARCH"
							Root="HKLM"
							Key="SOFTWARE\Microsoft\VisualStudio\9.0\Setup\VS"
							Name="EnvironmentPath"
							Type="file">
				<FileSearch Id="VS2008_DEVENV_FILE" Name="[VS2008_DEVENV]"/>
